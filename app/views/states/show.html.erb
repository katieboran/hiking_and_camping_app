<div class="page-header">
  <h3>State #<%= @state.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/states" class="btn btn-primary">
        Back
      </a>
      <a href="/states/<%= @state.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_state/<%= @state.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A State has many parks -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Parks
      </li>

      <% @state.parks.each do |park| %>
        <li class="list-group-item">
          <a href="/parks/<%= park.id %>">
            <%= park.state_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/parks/<%= park.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/parks/<%= park.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_park/<%= park.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_park" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for state_id -->
      <input type="hidden" name="state_id" value="<%= @state.id %>">

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="">
      </div>

      <!-- Label and input for dates_of_operation -->
      <div class="form-group">
        <label for="dates_of_operation" class="control-label">
          Dates of operation
        </label>

        <input type="text" id="dates_of_operation" name="dates_of_operation" placeholder="Dates of operation" class="form-control" value="">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="file" id="image" name="image" class="form-control">
      </div>

      <!-- Label and input for activities -->
      <div class="form-group">
        <label for="activities" class="control-label">
          Activities
        </label>

        <input type="text" id="activities" name="activities" placeholder="Activities" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Park
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
