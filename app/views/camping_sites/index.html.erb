<div class="page-header">
  <h1>
    Camping sites
    <a href="/camping_sites/new" class="btn btn-lg btn-success">New Camping site</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Capacity</th>
        <th>Review</th>
        <th>Park</th>
        <th>Actions</th>
      </tr>

      <% @camping_sites.each do |camping_site| %>
      <tr>
        <td>
          <% if camping_site.camping_review.present? %>
            <a href="/camping_reviews/<%= camping_site.camping_review.id %>">
              <%= camping_site.camping_review.review_content %>
            </a>
          <% end %>
        </td>
        <td>
          <% if camping_site.park.present? %>
            <a href="/parks/<%= camping_site.park.id %>">
              <%= camping_site.park.state_id %>
            </a>
          <% end %>
        </td>
        <td><%= camping_site.park_id %></td>
        <td>
          <a href="/camping_sites/<%= camping_site.id %>" class="btn btn-primary">Show</a>
          <a href="/camping_sites/<%= camping_site.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_camping_site/<%= camping_site.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @camping_sites, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
