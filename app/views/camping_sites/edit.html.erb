<!-- Validation failure messages -->
<% if @camping_site.errors.any? %>
  <% @camping_site.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Camping Site #<%= @camping_site.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_camping_site/<%= @camping_site.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for capacity -->
      <div class="form-group">
        <label for="capacity" class="control-label">
          Capacity
        </label>

        <%= select_tag(:capacity, options_from_collection_for_select(CampingReview.all, :id, :review_content, @camping_site.capacity), :class => "form-control") %>
      </div>

      <!-- Label and input for review_id -->
      <div class="form-group">
        <label for="review_id" class="control-label">
          Review
        </label>

        <input type="text" id="review_id" name="review_id" placeholder="Review" class="form-control" value="<%= @camping_site.review_id %>">
      </div>

      <!-- Label and input for park_id -->
      <div class="form-group">
        <label for="park_id" class="control-label">
          Park
        </label>

        <input type="text" id="park_id" name="park_id" placeholder="Park" class="form-control" value="<%= @camping_site.park_id %>">
      </div>

      <button class="btn btn-warning">
        Update Camping Site
      </button>
      or
      <a href="/camping_sites/<%= @camping_site.id %>">Cancel</a>
    </form>
  </div>
</div>
