<div class="page-header">
  <h3>Camping Site #<%= @camping_site.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Capacity</dt>
      <dd>
        <% if @camping_site.camping_review.present? %>
          <a href="/camping_reviews/<%= @camping_site.capacity %>">
            <%= @camping_site.camping_review.review_content %>
          </a>
        <% end %>
      </dd>

      <dt>Review</dt>
      <dd>
        <% if @camping_site.park.present? %>
          <a href="/parks/<%= @camping_site.review_id %>">
            <%= @camping_site.park.state_id %>
          </a>
        <% end %>
      </dd>

      <dt>Park</dt>
      <dd><%= @camping_site.park_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/camping_sites" class="btn btn-primary">
        Back
      </a>
      <a href="/camping_sites/<%= @camping_site.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_camping_site/<%= @camping_site.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
