<div class="page-header">
  <h1>
    Camping reviews
    <a href="/camping_reviews/new" class="btn btn-lg btn-success">New Camping review</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Review content</th>
        <th>User</th>
        <th>Star rating</th>
        <th>Actions</th>
      </tr>

      <% @camping_reviews.each do |camping_review| %>
      <tr>
        <td><%= camping_review.review_content %></td>
        <td><%= camping_review.user.email %></td>
        <td><%= camping_review.star_rating %></td>
        <td>
          <a href="/camping_reviews/<%= camping_review.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == camping_review.user %>
            <a href="/camping_reviews/<%= camping_review.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_camping_review/<%= camping_review.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @camping_reviews, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
