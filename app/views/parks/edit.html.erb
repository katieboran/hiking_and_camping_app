<!-- Validation failure messages -->
<% if @park.errors.any? %>
  <% @park.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Park #<%= @park.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_park/<%= @park.id %>" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for state_id -->
      <div class="form-group">
        <label for="state_id" class="control-label">
          State
        </label>

        <%= select_tag(:state_id, options_from_collection_for_select(State.all, :id, :name, @park.state_id), :class => "form-control") %>
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @park.address %>">
      </div>

      <!-- Label and input for dates_of_operation -->
      <div class="form-group">
        <label for="dates_of_operation" class="control-label">
          Dates of operation
        </label>

        <input type="text" id="dates_of_operation" name="dates_of_operation" placeholder="Dates of operation" class="form-control" value="<%= @park.dates_of_operation %>">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <%= cl_image_tag(@park.image.to_s, :width => 90, :height => 90, :crop => :thumb) %>
        <input type="file" id="image" name="image" class="form-control">
      </div>

      <!-- Label and input for activities -->
      <div class="form-group">
        <label for="activities" class="control-label">
          Activities
        </label>

        <input type="text" id="activities" name="activities" placeholder="Activities" class="form-control" value="<%= @park.activities %>">
      </div>

      <button class="btn btn-warning">
        Update Park
      </button>
      or
      <a href="/parks/<%= @park.id %>">Cancel</a>
    </form>
  </div>
</div>
