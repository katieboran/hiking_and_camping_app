<div class="form-group">
  <%= f.label :park_id, "CampingSite Park" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :camping_sites_park_id_gteq, :class => "form-control", :placeholder => "CampingSite Park greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :camping_sites_park_id_lteq, :class => "form-control", :placeholder => "CampingSite Park less than or equal to" %>
    </div>
  </div>
</div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/parks" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#parks_filters">
      Show Filters
    </a>
  </div>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>State</th>
        <th>Address</th>
        <th>Dates of operation</th>
        <th>Image</th>
        <th>Activities</th>
        <th>Actions</th>
      </tr>

      <% @parks.each do |park| %>
      <tr>
        <td>
          <% if park.state.present? %>
            <a href="/states/<%= park.state.id %>">
              <%= park.state.name %>
            </a>
          <% end %>
        </td>
        <td><%= park.address %></td>
        <td><%= park.dates_of_operation %></td>
        <td><img src='<%= park.image %>' class='img-responsive'></td>
        <td><%= park.activities %></td>
        <td>
          <a href="/parks/<%= park.id %>" class="btn btn-primary">Show</a>
          <a href="/parks/<%= park.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_park/<%= park.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @parks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>