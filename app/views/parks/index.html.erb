<div class="page-header">
  <h1>
    Parks
    <a href="/parks/new" class="btn btn-lg btn-success">New Park</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "parks_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :activities_cont, "Activities contains" %>
    <%= f.text_field :activities_cont, :class => "form-control", :placeholder => "Activities contains" %>
  </div>

<div class="form-group">
          <%= f.label :dates_of_operation, "Dates of operation" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='dates_of_operationgteqPicker'>
                  <%= f.text_field :dates_of_operation_gteq, :class => "form-control", :placeholder => "Dates of operation greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='dates_of_operationlteqPicker'>
                  <%= f.text_field :dates_of_operation_lteq, :class => "form-control", :placeholder => "Dates of operation less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#dates_of_operationgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#dates_of_operationlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#dates_of_operationgteqPicker').on("dp.change", function (e) {
                  $('#dates_of_operationlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#dates_of_operationlteqPicker').on("dp.change", function (e) {
                  $('#dates_of_operationgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
